<div class="mt-8 mb-8 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-3xl">
    <% if @short_urls.count.zero? %>
        <div class="min-h-full bg-white py-16 px-6 sm:py-24 md:grid md:place-items-center lg:px-8">
            <div class="mx-auto max-w-max">
                <main class="sm:flex">
                <p class="text-4xl font-bold tracking-tight text-indigo-600 sm:text-5xl">404</p>
                <div class="sm:ml-6">
                    <div class="sm:border-l sm:border-gray-200 sm:pl-6">
                    <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">No URls found</h1>
                    <p class="mt-1 text-base text-gray-500">There are no URLS yet, you can go back and create the first one!</p>
                    </div>
                    <div class="mt-10 flex space-x-3 sm:border-l sm:border-transparent sm:pl-6">
                    <a href="<%= root_path %>" class="inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                        Go back home
                    </a>
                    </div>
                </div>
                </main>
            </div>
        </div>
    <% else %>
        <h2 class="text-4xl font-bold tracking-tight text-gray-900">Thi is out top 100 of more visited URLS</h2>
        <ul role="list" class="divide-y divide-gray-200">
            <% @short_urls.each do |short_url| %>
                <li class="flex py-4">
                    <img class="h-10 w-10" src="<%= short_url.logo %>" alt="">
                    <div class="ml-3">
                        <p class="text-sm font-medium text-gray-900"><%= short_url.title %></p>
                        <p class="text-sm text-gray-500">
                            <%= short_url_url(short_url.short_code) %>
                            <span>Visits: <%= short_url.visits_count %></span>
                        </p>
                    </div>
                </li>
            <% end %>
        </ul>
    <% end %>
  </div>
</div>
